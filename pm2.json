{
  "apps": [
    {
      "name": "website",
      "script": "node_modules/next/dist/bin/next",
      "args": "start",
      "cwd": "./",
      "instances": "max",
      "exec_mode": "cluster",
      "max_memory_restart": "1G",
      "autorestart": true,
      "watch": false,
      "max_restarts": 10,
      "restart_delay": 5000,
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "time": true
    }
  ]
}